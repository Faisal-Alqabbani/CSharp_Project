<h1 class="text-center text-muted my-2">Hobbies</h1>


<div class="row">
    <div class="col-md-6">
        <table class="table table-striped">
            <thead>
                <tr>
                     <th>Name</th>
                     <th>Enthusiasts</th>
                </tr>
             
            </thead>
            <tbody>
                @foreach(var item in ViewBag.AllHobbies)
                {
                    <tr>
                        <td><a href="/hobby/@item.HobbyId">@item.Name</a></td>
                        <td>@item.Users.Count</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="my-3">
            <a href="/new" class="btn btn-outline-dark">Create a Hobby</a>
        </div>
    </div>
    <div class="col-md-4 card p-3 bg-light">
        <div>
            <h4>Top Novice</h4>
            <ul>
                @foreach(var item in ViewBag.ProficiencyNovice){
                    <li>@item.Name</li>
                }
            </ul>
        </div>
         <div>
            <h4>Top Novice</h4>
            <ul>
                @foreach(var item in ViewBag.ProficiencyIntermediate){
                    <li>@item.Name</li>
                }
            </ul>
        </div>
         <div>
            <h4>Top Expert</h4>
            <ul>
                 
                @foreach(var item in ViewBag.ProficiencyExpert){
                    <li>@item.Name</li>
                }
            </ul>
        </div>
        
    </div>
</div>
