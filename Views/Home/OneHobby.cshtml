@model Hobby;
<h1 class="text-muted my-2">@Model.Name</h1>
<div class="row h-50">
    <div class="col-md-2">
        <h3>Description</h3>
    </div>
    <div class="col-md-5">
        <p>@Model.Description</p>
        <a href="/edit/@Model.HobbyId" class="btn btn-outline-secondary my-2">Edit Hobby</a>
    </div>
</div>
<hr class="hr">
<h3 class="text-muted my-5">@Model.Name Athletics</h3>
<div class='row'>
    <div class="col-md-6">
        <table class="table table-striped">
            <thead>
                <th>Name</th>
                <th>Proficiency</th>
            </thead>
            <tbody>
                @foreach (var item in @Model.Users){
                  <tr>
                      <td>@item.User.Username</td>
                      <td>@item.Proficiency</td>
                  </tr>  
                }
            </tbody>
        </table>
          
                
           
    </div>
    <div class='col-md-4'>
        @if(!@Model.Users.Any(u => u.UserId ==  ViewBag.LoggedUser.UserId)){
            <form action="/AddToHobby/@Model.HobbyId" method="post">
            <div class="form-group">
            <label>Become an Enthusasit</label>
            <select name="Proficiency" class="form-control">
                <option value="Novice">Novice</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Expert">Expert</option>
            </select>
            </div>
          
            <button class="btn btn-outline-dark">Add</button>
            </form>
            
        }
       
    </div>
</div>

